<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fbf3fc">
  <LinearLayout
      android:id="@+id/container_toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbardiabetes" />
  </LinearLayout>
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_marginLeft="25dp"
      android:layout_marginRight="25dp"
      android:layout_marginTop="105dp"
      android:weightSum="1"
      android:id="@+id/linearLayoutLogin"
      android:background="@drawable/my_box_diabetes"
      android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:layout_marginTop="5.0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="Username"
          android:id="@+id/textViewUsername"
          android:layout_centerHorizontal="true"
          android:textSize="16dp"
          android:textStyle="bold"
          android:gravity="center_vertical|center_horizontal"
          android:textColor="#000000"
          android:layout_marginBottom="0.0dp"
          android:layout_marginRight="0.0dp"
          android:layout_marginTop="5.0dp" />
      <EditText
          android:layout_width="160dp"
          android:layout_height="match_parent"
          android:inputType="text"
          android:ems="10"
          android:id="@+id/HA_value"
          android:textColor="#6f6f6f"
          android:layout_gravity="center_vertical"
          android:textSize="20dp"
          android:layout_marginLeft="5dp"
          android:textStyle="bold"
          android:gravity="center_vertical|center_horizontal"
          android:background="@drawable/my_box_dis" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="Password"
          android:id="@+id/textViewPassword"
          android:layout_centerHorizontal="true"
          android:textSize="16dp"
          android:textStyle="bold"
          android:gravity="center_vertical|center_horizontal"
          android:textColor="#000000"
          android:layout_marginBottom="0.0dp"
          android:layout_marginRight="0.0dp"
          android:layout_marginTop="5.0dp" />
      <EditText
          android:layout_width="160dp"
          android:layout_height="match_parent"
          android:inputType="numberDecimal"
          android:ems="10"
          android:id="@+id/HA_value"
          android:textColor="#6f6f6f"
          android:layout_gravity="center_vertical"
          android:textSize="20dp"
          android:layout_marginLeft="5dp"
          android:textStyle="bold"
          android:gravity="center_vertical|center_horizontal"
          android:background="@drawable/my_box_dis" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Register"
        android:id="@+id/textViewRegis"
        android:onClick="CLickRegis"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginTop="22.5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="ForgetPassword"
        android:id="@+id/textViewForget"
        android:onClick="CLickForget"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginTop="22.5dp" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/imageView3"
        android:onClick="CLickLogin"
        android:src="@drawable/loginbutton"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20.5dp" />
  </LinearLayout>
</RelativeLayout>